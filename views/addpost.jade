extends layout

block content
  .subcontainer
    h1= title
    ul.errors
      if error
        each error, i in errors
          li.alert.alert-danger #{error.msg}
    form(method="post" action="/posts/add" enctype="multipart/form-data")
      .form-group
        label Title: 
        input.form-control(name="title" type="text" required)
      .form-group
        label Category
        select.form-control(name="category")
         each category,i in categories
          option(value="#{category.name}") #{category.name}
      .form-group
        label Body 
        textarea.form-control(name="body" id="body")
      .form-group
        label Main image
        input.form-control(name="mainimage" type="file")
      .form-group
        label Author
        select.form-control(name="author")
         option(value="Anmol Vashistha") Anmol Vashistha
         option(value="John Doe") John Doe
      button.btn.btn-default(name="submit" type="submit" value="save") Submit
      script(src='/ckeditor/ckeditor.js')
      script
       | CKEDITOR.replace('body');
    